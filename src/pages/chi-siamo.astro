---
import '../styles/global.css';
import Layout from "@/layouts/main.astro"
import Hero from "@/components/sections/about/hero.astro"
import Values from "@/components/sections/about/values.astro"
import Split from "@/components/sections/split-reverse.astro"
import Leadership from "@/components/sections/about/leadership.astro"
import Team from "@/components/sections/about/team.astro"
import Collaborators from "@/components/sections/about/collaborators.astro"

import { aboutMeta, aboutHero, aboutValues, aboutSplitSection, aboutLeadershipSection, aboutTeamSection, aboutCollaboratorSection } from "@/content/static"
---
<Layout content={aboutMeta.content}>
  <Hero {...aboutHero}/>
  <Values {...aboutValues} />
  <Split {...aboutSplitSection} />
  <Leadership {...aboutLeadershipSection} />
  <Team {...aboutTeamSection} />
  <Collaborators {...aboutCollaboratorSection} />
</Layout>
