---
import { SecondaryLabel } from "../patterns/label";
import { PrimaryButtonAlt} from "../patterns/button";
import type { CallToActionProps as Props } from "@/content/static"
const { label, title, description, button, image } = Astro.props
import { getImage } from "astro:assets"
const imagePropr = await getImage({
  src:image,
  alt: title,
  width: 500,
  height: 500,
  format: "webp"
})
---
<section class="rounded-4xl container container-padding container-margin bg-slate-900 p-8">
  <div class="grid md:grid-cols-2 gap-16">
    <div class="flex flex-col justify-between p-4 gap-8 text-slate-50">
      <div>
        <SecondaryLabel {...label}/>
        <h2 class="pt-4 font-semibold
          text-2xl
          md:text-4xl 
          ">{title}</h2>
      </div>
      <div>
        <p class="pb-4">{description}</p>
        <PrimaryButtonAlt {...button} />
      </div>
    </div>
    <img src={imagePropr.src} alt={title} class="w-full h-full object-cover rounded-2xl md:order-first"/>
  </div>
</section>
