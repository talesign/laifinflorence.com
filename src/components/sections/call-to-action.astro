---
import { SecondaryLabel } from "../patterns/label";
import { PrimaryButtonAlt } from "../patterns/button";
import { getImage } from "astro:assets"
import image from "@/content/call_to_action.jpeg"
import type { CallToActionProps as Props } from "@/content/static"
const { label, title, description, button } = Astro.props

const imagePropr = await getImage({
  src:image,
  alt: title,
  width: 1000,
  height: 1000,
  format: "webp"
})
---
<section class="card-spacing rounded-4xl container container-padding container-margin bg-slate-900">
  <div class="grid md:grid-cols-2 gap-16">
    <div class="flex flex-col justify-between gap-8 text-slate-50">
      <div>
        <SecondaryLabel {...label}/>
        <h2 class="header-medium pt-4">{title}</h2>
      </div>
      <div>
        <p class="pb-4">{description}</p>
        <PrimaryButtonAlt {...button} />
      </div>
    </div>
    <img src={imagePropr.src} alt={title} class="w-full h-full object-cover rounded-2xl md:order-first"/>
  </div>
</section>
