---
import { getImage } from 'astro:assets';
import { PrimaryButton, SecondaryButton } from "@/components/patterns/button";
import image from "@/content/home_hero.jpg"

import type { HomeHeroProps as Props } from "@/content/static"
const { title, description, primaryButton, secondaryButton } = Astro.props
const imageAttrs = await getImage({
  src: image,
  alt: title,
  width: 1200,
  height: 800,
  aspectRatio: '16:9',
  format: 'webp',
});
---
<section>
  <div
    class="container container-margin-hero grid text-slate-50
    bg-bottom bg-contain md:bg-cover bg-no-repeat bg-[#eeeeee] rounded-b-4xl md:rounded-4xl items-end md:items-stretch"
  >
    <img class="col-start-1 col-end-1 row-start-1 row-end-1 rounded-b-4xl md:w-full md:h-full md:rounded-4xl" src={imageAttrs.src} {...imageAttrs.attributes} />
    <div
      class="grid p-8 md:p-16 gap-8 col-start-1 col-end-1 row-start-1 row-end-1
      pb-[300px] md:rounded-4xl rounded-b-4xl
      md:pb-[400px] xl:grid-cols-2 bg-slate-900/70 md:bg-slate-900/70"
    >
      <h1 class="header-big">{title}</h1>
      <div>
        <p>{description}</p>
        <div class="flex flex-col md:flex-row pt-4 gap-4">
          <PrimaryButton {...primaryButton} />
          <SecondaryButton {...secondaryButton} />
        </div>
      </div>
    </div>
  </div>
</section>
