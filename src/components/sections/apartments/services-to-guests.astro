---
import type { ApartmentsServicesProps as Props } from "@/content/static"
const { title, description, services } = Astro.props
---
<section class="container container-padding container-margin" id="#servizi">
  <div class="p-4">
    <div class="flex flex-col gap-4 sm:max-w-prose">
      <h2 class="header-medium">{title}</h2>
      <p>{description}</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 xl:grid-cols-6 gap-4 py-8">
      {services.map((service) => (
        <article class="p-2 rounded-full bg-slate-200 flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-slate-900 flex items-center justify-center ">
            <service.icon className="w-4 h-4 text-slate-50" />
          </div>
          <span>{service.name}</span>
        </article>
      ))}
    </div>
  </div>
</section>
