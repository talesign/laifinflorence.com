---
import type { ApartmentsHeroProps as Props } from "@/content/static"
import { PrimaryLabel } from "@/components/patterns/label"
const { label, title, description} = Astro.props
---
<section class="container container-padding container-margin bg-slate-900 rounded-4xl ">
  <div class="flex flex-col items-center text-slate-50 max-w-2xl mx-auto text-center gap-4 p-4">
    <PrimaryLabel {...label} />
    <h1 class="text-3xl md:text-6xl font-semibold">{title}</h1>
    <p>{description}</p>
  </div>
</section>
