---
import { PrimaryLabel } from "@/components/patterns/label"
import type { AboutValuesProps as Props } from "@/content/static"
const { title, description, label, button, values } = Astro.props
---
<section class="container container-padding container-margin">
  <div class="p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-32 relative">
      <div class="flex flex-col gap-4 md:sticky md:top-20 self-start">
        <PrimaryLabel {...label} />
        <h2 class="font-semibold text-3xl md:text-5xl">{title}</h2>
        <p>{description}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
        {values.map((value) => (
          <article class="flex flex-col gap-4">
            <value.icon className="text-4xl" />
            <h3 class="text-xl font-semibold">{value.title}</h3>
            <p>{value.description}</p>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>
